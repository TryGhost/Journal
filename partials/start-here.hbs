{{!-- this partial is responsible for rendering modules on the top --}}
{{!-- https://forum.ghost.org/t/add-customized-handlebars-helpers/26808 --}}

<div class="start-here">
    {{^is "paged"}} {{!-- is it the first page --}}
        {{#foreach posts limit="5"}}
            <article class="gh-latest gh-card {{post_class}} start-here-card">
                <a class="gh-card-link start-here-link" href="{{url}}">
                    <span class="start-here-index">
                        {{increment @index 1}}
                    </span>

                    <header class="gh-card-header">
                        <h2 class="gh-article-title gh-card-title start-here-title">
                            {{title}}
                        </h2>
                    </header>

                    <p class="gh-article-excerpt start-here-excerpt">
                        {{excerpt}}
                    </p>

                    <footer class="gh-card-meta">
                        <span class="gh-card-duration">{{reading_time}}</span>
                        {{#if @site.comments_enabled}}
                            {{comment_count class="gh-card-comments"}}
                        {{/if}}
                        {{^has visibility="public"}}
                            {{> icons/star}}
                        {{/has}}
                    </footer>
                </a>
            </article>
        {{/foreach}}
    {{/is}}
</div>
