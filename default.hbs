                    </a>
                </nav>

                <div>
                    &nbsp;
                </div>
            </div>
        </footer>
    </div>

    {{#is "post, page"}}
        {{> pswp}}
    {{/is}}

    <script src="{{asset "built/main.min.js"}}"></script>

    <script src="https://cdn.cove.chat/comments.js" data-cove-id="4d52fb19f6e41a7f3cbbdf8dec58dd82" async></script>
    
    <script src="https://cdn.cove.chat/tools.js" data-cove-id="4d52fb19f6e41a7f3cbbdf8dec58dd82" async></script>

    {{!-- Table of contents & Footnotes js --}}
    {{#is "post, page"}}
        <script src="{{asset "built/sidebars.min.js"}}"></script>
    {{/is}}

    {{!-- Improve how native lazy loaded images appear (hide alt text while loading, then fade in ) --}}
    {{#is "index"}}
        <script>
            document.body.classList.add('hide-images');

            setTimeout(function() {
                document.body.classList.remove('hide-images');
            }, 1000 * 2);
        </script>
        <script src="{{asset "built/lazy-images.js"}}"></script>
    {{/is}}

    {{ghost_foot}}
</body>

</html>
