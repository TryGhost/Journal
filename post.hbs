{{!< default}} {{#post}} <main id="gh-main" class="gh-main">
    <article data-clarity-region="article" class="gh-article {{post_class}}">

        <header class="gh-article-header gh-canvas">
            <span class="gh-article-meta">
                {{#primary_author}}By <a href="{{url}}">{{name}}</a>{{/primary_author}}
                {{#if primary_tag}}
                in
                <a class="gh-article-tag" href="{{primary_tag.url}}">{{primary_tag.name}}</a>
                {{/if}}
                â€”
                <time datetime="{{date format=" YYYY-MM-DD"}}">{{date}}</time>
            </span>

            <h1 class="gh-article-title">{{title}}</h1>

            {{#if custom_excerpt}}
            <p class="gh-article-excerpt">{{custom_excerpt}}</p>
            {{/if}}

            {{> "feature-image"}}
        </header>

        <div class="gh-content gh-canvas">
            <div style="height: 30vmin;min-height: 240px">
                <script src="https://cdn.jsdelivr.net/ghost/signup-form@~0.1/umd/signup-form.min.js" data-background-color="#F1F3F4" data-text-color="#000000" data-button-color="#750b1c" data-button-text-color="#FFFFFF" data-title="Join our email list!" data-description="We are a community-supported initiative. Sign up to receive exclusive insights and learn more about our mission" data-site="https://www.stoppopulationdecline.org" async></script>
            </div>
            {{content}}
        </div>

        {{#if comments}}
        <div class="gh-comments gh-canvas">
            {{comments}}
        </div>
        {{/if}}

        <footer
            class="gh-article-footer gh-canvas{{#if @site.comments_enabled}}{{#unless @member}} no-border{{/unless}}{{#unless access}} no-border{{/unless}}{{/if}}">
            <nav class="gh-navigation">
                <div class="gh-navigation-previous">
                    {{#prev_post}}
                    <a class="gh-navigation-link" href="{{url}}">
                        <span class="gh-navigation-label">{{> icons/arrow-left}} Previous article</span>
                        <h4 class="gh-navigation-title">{{title}}</h4>
                    </a>
                    {{/prev_post}}
                </div>

                <div class="gh-navigation-middle"></div>

                <div class="gh-navigation-next">
                    {{#next_post}}
                    <a class="gh-navigation-link" href="{{url}}">
                        <span class="gh-navigation-label">Next article {{> icons/arrow-right}}</span>
                        <h4 class="gh-navigation-title">{{title}}</h4>
                    </a>
                    {{/next_post}}
                </div>
            </nav>
        </footer>

    </article>
    </main>

    {{/post}}
